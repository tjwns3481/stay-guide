# ===========================================
# Roomy Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Prisma - Supabase connection)
# Transaction mode (port 6543) with pgbouncer for migrations
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:6543/postgres?pgbouncer=true&connection_limit=1
# Session mode (port 5432) for Prisma Client queries
DIRECT_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# OpenAI (AI Concierge)
OPENAI_API_KEY=sk-xxxxx

# Local Development (optional - when using local PostgreSQL)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/roomy
# DIRECT_URL=postgresql://postgres:postgres@localhost:5432/roomy